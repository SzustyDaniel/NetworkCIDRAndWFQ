<Window x:Class="WFQCalculator.Views.WFQCalculator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WFQCalculator.Views"
        mc:Ignorable="d"
        Title="WFQCalculator" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <TextBlock Margin="10 15" FontSize="25" FontWeight="Bold" Padding="0 15">Weight Fair Queueing Calculator</TextBlock>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0">Browse for file</Button>
            <TextBox Grid.Column="1"></TextBox>
        </Grid>


        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock>Calculated Answers</TextBlock>
            <TextBlock Grid.Row="1"></TextBlock>
        </Grid>
        
    </Grid>
</Window>
